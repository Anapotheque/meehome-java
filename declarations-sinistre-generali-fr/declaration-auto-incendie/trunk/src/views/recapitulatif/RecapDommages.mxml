<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" styleName="recapPanel">
	<mx:Script>
		<![CDATA[
			import models.AppModel;
			import mx.controls.Alert;

			[Bindable]
        	private var appModel:AppModel = AppModel.getInstance();
		]]>
	</mx:Script>
	<mx:states>
	
		<mx:State name="depotVehiculeOui">
			<mx:AddChild position="after" relativeTo="{depotGarage}">
				<mx:VBox>
					<mx:Label width="370"  text="Renseignez le lieu et l’adresse où votre véhicule  peut être vu :" styleName="textSimpleBold" />
					<mx:Text width="600"  text="{appModel.dommages.lieuVehicule}" styleName="textSimple" />
				</mx:VBox>
			</mx:AddChild>
		</mx:State>
		<mx:State name="depotVehiculeNon">
			<mx:AddChild position="after" relativeTo="{depotGarage}">
				<mx:VBox>
					<mx:Label width="370"  text="Coordonnées du garage agréé choisi :" styleName="textSimpleBold" />
					<mx:Text width="600"  text="{appModel.dommages.coordGarage}" styleName="textSimple" />
				</mx:VBox>
			</mx:AddChild>
		</mx:State>
		
		<mx:State name="isAutresDommagesMat">
			<mx:AddChild position="after" relativeTo="{autresDommagesMat}">
				<mx:VBox>
					<mx:Label width="100%"  text="Si d'autres personnes sont concernées, renseignez leurs noms, prénoms et adresses :" styleName="textSimpleBold" />						
					<mx:Text width="600"  text="{appModel.dommages.autresPersonnes}" styleName="textSimple" />
				</mx:VBox>				
			</mx:AddChild>		
			<mx:AddChild position="after" relativeTo="{autresDommagesMat}">
				<mx:VBox>
					<mx:Label width="370"  text="Décrivez les autres dommages materiels :" styleName="textSimpleBold" />
					<mx:Text width="600"  text="{appModel.dommages.descriptionDommagesMat}" styleName="textSimple" />
				</mx:VBox>
			</mx:AddChild>
		</mx:State>
		
	</mx:states>

	<mx:VBox>
		<mx:VBox>
			<mx:Label width="370"  text="Décrivez les dommages subis par votre véhicule :" styleName="textSimpleBold" />
			<mx:Text width="600"  text="{appModel.dommages.description}" styleName="textSimple" />
		</mx:VBox>
		<mx:HBox id="depotGarage">
			<mx:Label width="370"  text="Avez-vous déposé votre véhicule endommagé dans un garage ?" styleName="textSimpleBold" />
			<mx:Label width="100"  text="{appModel.dommages.depotGarage}" styleName="textSimple" />
		</mx:HBox>

		<!--Autres Dommages materiels-->
		<mx:Spacer width="45"/>
		
		<mx:HBox id="autresDommagesMat">
			<mx:Label width="370"  text="L'accident a-t'il provoqué d'autres dommages materiels ?" styleName="textSimpleBold" />
			<mx:Label width="100"  text="{appModel.dommages.autresDommagesMat}" styleName="textSimple" />
		</mx:HBox>

		<!--Dommages corporels-->
		<mx:Spacer width="45"/>
				
		<mx:HBox>
			<mx:Label width="370"  text="L'accident a-t'il provoqué des dommages corporels ?" styleName="textSimpleBold" />
			<mx:Label width="100"  text="{appModel.dommages.dommagesCorporel}" styleName="textSimple" />
		</mx:HBox>						
	</mx:VBox>
</mx:Panel>