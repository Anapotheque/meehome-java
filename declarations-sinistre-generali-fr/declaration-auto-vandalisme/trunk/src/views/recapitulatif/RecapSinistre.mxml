<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml" styleName="recapPanel">
	<mx:Script>
		<![CDATA[
			import models.vo.SinistreVO;
			import models.AppModel;
			import mx.controls.Alert;

			[Bindable]
        	private var appModel:AppModel = AppModel.getInstance();
  	]]>
	</mx:Script>

		<mx:states>
			<mx:State name="horaireOui">
				<mx:AddChild position="after" relativeTo="{heureProduit}">
					<mx:HBox>					
						<mx:Label width="100%"  text="Entre {(appModel.sinistre.heureDebut.toString().length == 1)?'0'+appModel.sinistre.heureDebut.toString():appModel.sinistre.heureDebut.toString()}h{(appModel.sinistre.minuteDebut.toString().length == 1)?'0'+appModel.sinistre.minuteDebut.toString():appModel.sinistre.minuteDebut.toString()}mn et {(appModel.sinistre.heureFin.toString().length == 1)?'0'+appModel.sinistre.heureFin.toString():appModel.sinistre.heureFin.toString()}h{(appModel.sinistre.minuteFin.toString().length == 1)?'0'+appModel.sinistre.minuteFin.toString():appModel.sinistre.minuteFin.toString()}mn"  
							styleName="textSimple" />
					</mx:HBox>
				</mx:AddChild>
			</mx:State>
			<mx:State name="horaireNon">
				<mx:AddChild position="after" relativeTo="{heureProduit}">
					<mx:HBox>						
						<mx:Label width="80"  text="Ne sait pas" styleName="textSimple" />						
					</mx:HBox>
				</mx:AddChild>
			</mx:State>
		</mx:states>
		
	
	<mx:VBox>
		<mx:HBox id="dateDuSinistre">
			<mx:Label width="370" text="A quelle date cela s'est-il produit ?" styleName="textSimpleBold" />
			<mx:Label width="100" text="{appModel.sinistre.date}" styleName="textSimple" />
		</mx:HBox>
		
		<mx:HBox id="heureDuSinistre">
			<mx:Label id="heureProduit" width="370" text="Vers quelle heure cela s’est-il produit ?" styleName="textSimpleBold" />									
		</mx:HBox>
		
		<mx:VBox>
			<mx:Label width="370" text="Décrivez  les circonstances du vandalisme " styleName="textSimpleBold" />
			<mx:Text width="600" text="{appModel.sinistre.circonstances}" styleName="textSimple" />
		</mx:VBox>
		<mx:HBox>
			<mx:Label width="370" text="Avez-vous déposé plainte ?" styleName="textSimpleBold" />
			<mx:Label width="135" text="{appModel.sinistre.plainte}" styleName="textSimple" />
		</mx:HBox>
	</mx:VBox>
</mx:Panel>
