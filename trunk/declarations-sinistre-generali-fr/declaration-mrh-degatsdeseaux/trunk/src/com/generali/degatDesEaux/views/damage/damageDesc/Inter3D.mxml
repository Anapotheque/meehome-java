<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" >
<mx:Script>
	<![CDATA[
		import com.generali.degatDesEaux.events.ui.Inter3DEvent;
			public var type:String;
			public var index:int;
			
			public function playWall():void{
	 			dispatchEvent(new Inter3DEvent(Inter3DEvent.SHOW_WALL,type,index));
	 		}
	 		
	 		public function playPlafond():void{
	 			dispatchEvent(new Inter3DEvent(Inter3DEvent.SHOW_PLAFOND,type,index));
	 		}
	 		public function playSols():void{
	 			dispatchEvent(new Inter3DEvent(Inter3DEvent.SHOW_SOL,type,index));
	 		}
	 		public function playMobile():void{
	 			dispatchEvent(new Inter3DEvent (Inter3DEvent.SHOW_MOBILIER,type,index));
	 		}
	]]>
</mx:Script>
		<mx:VBox width="150" height="150">
	  		<mx:Button width="100%" height="100%" click="playWall()" label="Murs" />
	  		<mx:Button width="100%" height="100%"  click="playPlafond()" label="Plafonds" />
	  	</mx:VBox>
	  	<mx:VBox width="150" height="150">	  	
	  		<mx:Button width="100%" height="100%"  click="playSols()" label="Sols" />
	  		<mx:Button width="100%" height="100%"  click="playMobile()" label="Mobilier" />
	  	</mx:VBox>
</mx:HBox>
